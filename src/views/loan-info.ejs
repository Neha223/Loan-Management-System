    <!------ Include the above in your HEAD tag ---------->
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/header.css">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loan Transaction Information</title>
</head>
<body  class="bg-dark text-white">
    <div class="container">
        <h5 class="card-title" style="margin-top: 100px;font-size: large;line-height: 5rem;text-align: center;">Loan Management System</h5>
        <a href="/borrower-view/<%=data[0].userId%>" class="btn btn-success" style="float: right;margin-right:15px">Back to Loan Views</a>
        <div class="row profile" style="margin-top: 60px;">
            
    
            <div class="col-md-3">
    
                <div class="profile-sidebar">
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Customer Name: <%=data[0].name%> </a>
                            </li>
                            <li class="active">
                                <a href="/#">
                                    <i class="glyphicon glyphicon-phone"></i>
                                    Contact: <%=data[0].contact%> </a>
                            </li>
    
                            <li>
                                <a href="#" target="_blank">
                                    <i class="glyphicon glyphicon-gift"></i>
                                    Loan Amount: <%=data[0].amount%> </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-euro"></i>
                                    Tenure: <%=data[0].tenure%> months</a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-euro"></i>
                                    Interest: <%=data[0].interest%>  %</a>
                            </li>
    
                        </ul>
    
                    </div>
    
                </div>
            </div>
    
            <div class="col-md-9">
               
                <div class="profile-content">
                    
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#ID</th>
                                <th scope="col">Installment Date</th>
                                <th scope="col">Installment Amount</th>
                                <th scope="col">Principal Amount</th>
                                <th scope="col">Interest Amount</th>
                                <th scope="col">Remaining Amount</th>
                            </tr>
                        </thead>
                       <tbody> 
                            <% var cnt=1 %>
                            <% data[0].transactions.forEach(function (transaction) { %>
                            <tr>
                                <td><%= cnt++ %></td>
    
    
                                <td><%= transaction.date %></td>
                                <td><%= transaction.amount %></td>
                                <td><%= transaction.principalComponent %></td>
                                <td><%= transaction.interestComponent %></td>
                                <td><%= transaction.remainingPrincipalComponent %></td>
    
    
                                <% }) %>
    
                            </tr>
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

